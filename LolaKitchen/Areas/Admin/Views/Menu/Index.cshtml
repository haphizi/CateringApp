@model IEnumerable<LolaKitchen.Models.MenuItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Menu Items</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>@Html.DisplayNameFor(m=>m.Name)</th>
                        <th>@Html.DisplayNameFor(m=>m.Price)</th>
                        <th>@Html.DisplayNameFor(m=>m.Category.CategoryName)</th>
                        <th>SubCategory ID</th>
                        <th>

                        </th>
                        <th></th>
                        
                    </tr>
                    @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.Price)</td>
                    <td>@Html.DisplayFor(m => item.Category.CategoryName.Where(m => item.Category.ParentCategoryID == null))</td>
                    <td>@Html.DisplayFor(m => item.Category.CategoryName.Where(m => item.Category.ParentCategoryID == item.Category.CategoryID))</td>
                </tr>
                }
                </table>
            }
            else
            {
                <p>No menu item exists yet.</p>
            }



    </div>
    <br />
</div>
